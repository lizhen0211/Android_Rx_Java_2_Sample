<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FlowableActivity">

    <Button
        android:id="@+id/test_backpressure_btn_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:onClick="onTestFlowableDemo1Click"
        android:text="Test Flowable 1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/test_backpressure_btn_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:onClick="onTestFlowableDemo2Click"
        android:text="Test Flowable 2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/test_backpressure_btn_1" />

    <Button
        android:id="@+id/test_backpressure_btn_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:onClick="onTestFlowableDemo3Click"
        android:text="Test Flowable 3"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/demo3_request_btn"
        app:layout_constraintTop_toBottomOf="@id/test_backpressure_btn_2" />

    <Button
        android:id="@+id/demo3_request_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:onClick="onDemo3RequestClick"
        android:text="Demo3 request"
        app:layout_constraintLeft_toRightOf="@id/test_backpressure_btn_3"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/test_backpressure_btn_2" />

    <Button
        android:id="@+id/test_backpressure_btn_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:onClick="onTestFlowableDemo4Click"
        android:text="Test Flowable 4"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/test_backpressure_btn_3" />
</android.support.constraint.ConstraintLayout>